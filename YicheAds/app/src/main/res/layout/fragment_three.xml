<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#f6f6f6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="广告样式"
            android:textSize="18sp"
            android:textColor="#303030"  />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#C5C5C5" />
    </RelativeLayout>

    <bigdata.yiche.com.view.MyScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:background="#f0f0f0"
        android:focusable="true"
        >

        <LinearLayout
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f0f0f0"
            android:layout_marginTop="3dp"
            android:orientation="vertical">
            <TextView
                android:text="图文广告"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:focusable="false"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@mipmap/ad_type_bg"/>

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#ffffff"
                android:focusable="false"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:focusable="false"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/pic_text" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:textColor="#333333"
                        android:focusable="false"
                        android:textSize="15sp"
                        android:maxLines="2"
                        android:text="东风风行S500 购车享优惠补贴千元好礼" />
                    <Button
                        android:layout_width="32dp"
                        android:layout_height="16dp"
                        android:text="推广"
                        android:textSize="11sp"
                        android:focusable="false"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="#1e67e0"
                        android:background="@drawable/shape_rec_blue"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:text="组图广告"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:focusable="false"
                android:paddingRight="20dp"
                android:paddingTop="3dp"
                android:layout_marginTop="3dp"
                android:paddingBottom="3dp"
                android:background="@mipmap/ad_type_bg"/>
            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:focusable="false"
                android:background="#ffffff"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#ffffff">
                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:focusable="false"
                        android:layout_alignParentBottom="true"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:text="Cross Polo 购车享千元礼包" />
                    <Button
                        android:layout_width="32dp"
                        android:layout_height="16dp"
                        android:text="推广"
                        android:focusable="false"
                        android:textSize="11sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentBottom="true"
                        android:textColor="#1e67e0"
                        android:background="@drawable/shape_rec_blue"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:focusable="false"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img21"
                        android:layout_width="94dp"
                        android:layout_height="80dp"
                        android:focusable="false"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/group1" />

                    <ImageView
                        android:id="@+id/img22"
                        android:layout_width="94dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="8dp"
                        android:focusable="false"
                        android:layout_weight="1"
                        android:background="@drawable/group2" />

                    <ImageView
                        android:id="@+id/img23"
                        android:layout_width="94dp"
                        android:layout_height="80dp"
                        android:focusable="false"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/group3" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:text="大图广告"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:focusable="false"
                android:paddingRight="20dp"
                android:layout_marginTop="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@mipmap/ad_type_bg"/>
            <LinearLayout
                android:id="@+id/ll_3"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:focusable="false"
                android:background="#ffffff"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:focusable="false"
                    android:background="#ffffff">
                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:focusable="false"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:text="长安CS75 购车即享千元超值补贴" />
                    <Button
                        android:layout_width="32dp"
                        android:layout_height="16dp"
                        android:text="推广"
                        android:textSize="11sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:focusable="false"
                        android:textColor="#1e67e0"
                        android:background="@drawable/shape_rec_blue"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    android:focusable="false"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bigpic"
                        android:focusable="false"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="15dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:layout_marginTop="3dp"
                android:background="#f0f0f0"
                android:orientation="vertical">
                <TextView
                    android:text="视频广告"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:focusable="false"
                    android:paddingRight="20dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@mipmap/ad_type_bg"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:focusable="false"
                    android:layout_height="270dp"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:focusable="false"
                        android:background="#ffffff">
                        <TextView
                            android:id="@+id/title4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:focusable="false"
                            android:textColor="#333333"
                            android:layout_centerVertical="true"
                            android:maxLines="1"
                            android:text="史上最萌大众汽车广告刺猬也有信仰" />
                        <Button
                            android:layout_width="32dp"
                            android:layout_height="16dp"
                            android:text="推广"
                            android:textSize="11sp"
                            android:focusable="false"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:textColor="#1e67e0"
                            android:background="@drawable/shape_rec_blue"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="223dp"
                        android:layout_marginBottom="12dp"
                        android:focusable="false">

                        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
                            android:id="@+id/video4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:focusable="false"
                            android:visibility="visible" />


                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/video_pic"
                            android:focusable="false"
                            android:clickable="true"
                            android:scaleType="fitXY" />

                        <ProgressBar
                            android:id="@+id/progressBar1"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="60dp"
                            android:layout_marginTop="100dp"
                            android:focusable="false"
                            android:visibility="gone" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </bigdata.yiche.com.view.MyScrollView>
</LinearLayout>
